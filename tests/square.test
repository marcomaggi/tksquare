#PAGE
## ------------------------------------------------------------
## Setup.
## ------------------------------------------------------------

package require Tcl 8.4
package require Tk  8.4
package require tcltest 2


::tcltest::configure -verbose "pass error" \
	-testdir [file dirname [file normalize [info script]]]
eval ::tcltest::configure $argv


source	[file join [::tcltest::configure -testdir] libs.tcl]
set dir [file normalize [file join [::tcltest::configure -testdir] ..]]
source  [file join $dir pkgIndex.tcl]

package require tksquare


#PAGE
## ------------------------------------------------------------
## Test namespace.
## ------------------------------------------------------------

namespace eval test {

    wm geometry . +10+10

    proc setup {} {
	square .s
    }
    proc cleanup {} {
	destroy .s
    }

#PAGE

::tcltest::test square-1.1 "square test" {
    -body	{
	set res [square .s]
	destroy .s
	set res
    }
    -result .s
}

#PAGE

::tcltest::test square-2.1 "cget options" {
    -setup	{ setup }
    -body	{
	.s cget -background
    }
    -result "#d9d9d9"
    -cleanup { cleanup }
}

::tcltest::test square-2.2 "cget options" {
    -setup	{ setup }
    -body	{
	.s cget -borderwidth
    }
    -result 2
    -cleanup { cleanup }
}

::tcltest::test square-2.3 "cget options" {
    -setup	{ setup }
    -body	{
	.s cget -dbl
    }
    -result 1
    -cleanup { cleanup }
}

::tcltest::test square-2.4 "cget options" {
    -setup	{ setup }
    -body	{
	.s cget -foreground
    }
    -result "#b03060"
    -cleanup { cleanup }
}

::tcltest::test square-2.5 "cget options" {
    -setup	{ setup }
    -body	{
	.s cget -posx
    }
    -result 0
    -cleanup { cleanup }
}

::tcltest::test square-2.6 "cget options" {
    -setup	{ setup }
    -body	{
	.s cget -posy
    }
    -result 0
    -cleanup { cleanup }
}

::tcltest::test square-2.7 "cget options" {
    -setup	{ setup }
    -body	{
	.s cget -relief
    }
    -result raised
    -cleanup { cleanup }
}

::tcltest::test square-2.8 "cget options" {
    -setup	{ setup }
    -body	{
	.s cget -size
    }
    -result 20
    -cleanup { cleanup }
}

#PAGE

::tcltest::test square-3.1 "configure options" {
    -setup	{ setup }
    -body	{
	.s configure -foreground white
	.s cget -foreground
    }
    -result white
    -cleanup { cleanup }
}

::tcltest::test square-3.2 "configure options" {
    -setup	{ setup }
    -body	{
	.s configure -foreground white
	.s configure -foreground
    }
    -result "-foreground foreground Foreground \#b03060 white"
    -cleanup { cleanup }
}

::tcltest::test square-3.3 "configure options" {
    -setup	{ setup }
    -body	{
	.s configure
    }
    -result *
    -match glob
    -cleanup { cleanup }
}


#PAGE
## ------------------------------------------------------------
## End of test namespace.
## ------------------------------------------------------------

::tcltest::cleanupTests
}
namespace delete test


